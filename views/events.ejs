<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/event.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Management</title>
</head>
<body>
    <h1>Event Management</h1>

    <% events.forEach(event => { %>
        <div class="event_container">
            <ul>
                <li>Event Name: <%= event.name %></li>
                <li><%= event.description %></li>
                <li>Location: <%= event.location %></li>
                <li>Required skills: <%= event.skills %></li>
                <li>Urgency: <%= event.urgency %></li>
                <li>Event Date: <%= event.date %></li>
            </ul>
            <a href="create event.html">Edit this event</a>
        </div>
    <% }) %>

    <h3><a href="create event.html">Click here to create event</a></h3><br />
    <h4><a href="./volunteermatching/volunteermatching.html">Match volunteers</a></h4>
</body>
</html>
